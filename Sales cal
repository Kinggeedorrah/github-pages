<body>
    <div class="container">
        <h1>Discord Sales Calculator</h1>
        <p>Enter your total sales below to calculate your earnings.</p>
        <input type="number" id="sales" placeholder="Enter total sales" />
        <button onclick="calculateEarnings()">Calculate</button>
        <div class="result" id="result"></div>
    </div>

    <script>
        function calculateEarnings() {
            const basePay = 40000;
            const commissionRate = 0.10;
            const sales = parseFloat(document.getElementById('sales').value);

            if (isNaN(sales) || sales < 0) {
                document.getElementById('result').textContent = "Please enter a valid sales amount.";
                return;
            }

            const commission = sales * commissionRate;
            const totalEarnings = basePay + commission;

            document.getElementById('result').textContent = `Your total earnings are $${totalEarnings.toFixed(2)}.`;
        }
    </script>
</body>
